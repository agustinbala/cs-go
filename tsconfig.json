{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "types": ["node"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018", "dom.iterable",
      "dom", "esnext.bigint"
    ],
    "paths": {
      "stream": [
        "node_modules/stream-browserify"
      ]
    }, 
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": true
  }
}
